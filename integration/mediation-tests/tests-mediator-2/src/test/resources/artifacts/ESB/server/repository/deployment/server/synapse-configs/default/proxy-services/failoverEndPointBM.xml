<proxy xmlns="http://ws.apache.org/ns/synapse" name="failoverEndPointBM" transports="http,https">
        <target>
            <inSequence>
                <send buildmessage="true">
                    <endpoint>
                        <failover>
                            <endpoint>
                                <address uri="http://localhost:9001/services/SimpleStockQuoteService">
                                    <enableAddressing/>
                                    <suspendDurationOnFailure>2</suspendDurationOnFailure>
                                </address>
                            </endpoint>
                            <endpoint>
                                <address uri="http://localhost:9002/services/SimpleStockQuoteService">
                                    <enableAddressing/>
                                    <suspendDurationOnFailure>2</suspendDurationOnFailure>
                                </address>
                            </endpoint>
                        </failover>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>