<api xmlns="http://ws.apache.org/ns/synapse" name="EI2084EnrichNamespaceAdditionTestCaseAPI" context="/EI2084">
    <resource methods="POST" uri-template="/test_with_pf">\
        <inSequence>
            <enrich>
                <source type="body" clone="true"/>
                <target type="property" property="INPUT_MESSAGE"/>
            </enrich>
            <payloadFactory media-type="xml">
                <format>
                    <inline xmlns="">
                        <payload>$1</payload>
                    </inline>
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('INPUT_MESSAGE')"/>
                </args>
            </payloadFactory>
            <property name="messageType" value="text/xml" scope="axis2"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
