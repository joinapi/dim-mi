<proxy xmlns="http://ws.apache.org/ns/synapse" name="DynamicPropertiesSynapseMessageContextEval" transports="https http" startOnLoad="true" trace="disable">
    <description/>
    <target>
        <inSequence>
            <property name="propertyNameFromPayload" expression="json-eval(propertyName)"/>
            <property name="propertyValueFromPayload" expression="json-eval(propertyValue)"/>
            <property name="{$ctx:propertyNameFromPayload}" expression="$ctx:propertyValueFromPayload"/>

            <switch source="$ctx:propertyNameFromPayload">
                <case regex="schoolName">
                    <payloadFactory media-type="json">
                        <format>
                            {"school":"$1"}
                        </format>
                        <args>
                            <arg expression="get-property('schoolName')"/>
                        </args>
                    </payloadFactory>
                </case>
                <default>
                    <log level="custom">
                        <property name="text" value="** Unrecognized Property Type **"/>
                    </log>
                    <makefault xmlns="http://ws.apache.org/ns/synapse" version="soap11">
                        <code xmlns:soap11Env="http://schemas.xmlsoap.org/soap/envelope/" value="soap11Env:Client" />
                        <reason value="Incorrect property type" />
                    </makefault>
                </default>
            </switch>
            <respond/>
        </inSequence>
        <outSequence/>
    </target>
</proxy>
