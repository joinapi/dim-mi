<api xmlns="http://ws.apache.org/ns/synapse" context="/maxMessage" name="max_message_api">
        <resource methods="POST">
            <inSequence>
                <cache collector="false" maxMessageSize="1000" timeout="20">
                    <protocol type="HTTP">
                        <methods>POST</methods>
                        <headersToExcludeInHash/>
                        <responseCodes>2[0-9][0-9]</responseCodes>
                        <hashGenerator>org.wso2.carbon.mediator.cache.digest.HttpRequestHashGenerator</hashGenerator>
                    </protocol>
                    <implementation maxSize="100"/>
                </cache>
                <send>
                    <endpoint name="inlined">
                        <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <cache collector="true"/>
                <send/>
            </outSequence>
        </resource>
    </api>