<proxy xmlns="http://ws.apache.org/ns/synapse" name="shortVal" transports="http,https">
        <target>
            <inSequence>
                <switch xmlns:m0="http://services.samples" source="//m0:getQuote/m0:request/m0:symbol">
                    <default>
                        <property name="MyProp" value="88" scope="default" type="SHORT"/>
                    </default>
                </switch>
                <log level="custom">
                    <property xmlns:ns="http://org.apache.synapse/xsd" xmlns:ns3="http://org.apache.synapse/xsd" name="symbol" expression="get-property('MyProp')"/>
                </log>
                <send>
                    <endpoint>
                        <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>